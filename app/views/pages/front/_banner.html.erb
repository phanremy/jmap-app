<div class="bg-primary min-h-[300px] flex flex-col justify-center items-center text-center px-5 py-10 my-10">
  <h3 class="text-primary-foreground font-heading text-4xl mb-10"><%= t('.title') %></h3>
  <div class="w-full flex justify-center">
    <div class="px-5"><%= svg_tag 'social/facebook', size: '5xl', options: { viewBox: '0 0 32 32' } %></div>
    <div class="px-5"><%= svg_tag 'social/twitter', size: '5xl', options: { viewBox: '0 0 50 50' } %></div>
    <div class="px-5"><%= svg_tag 'social/linkedin', size: '5xl', options: { viewBox: '0 0 32 32' } %></div>
    <div class="px-5"><%= svg_tag 'social/google', size: '5xl', options: { viewBox: '0 0 32 32' } %></div>
  </div>
