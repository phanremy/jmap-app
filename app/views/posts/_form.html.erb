<div class="w-auto lg:w-1/2">
  <%= form_with model: @post, builder: TailwindBuilder do |form| %>
    <div class="relative my-8 border-b-2 focus-within:border-secondary">
      <%= form.text_field :link_url, placeholder: "" %>
      <%= form.label :link_url %>
    </div>
    <div class="field">
      <%= form.submit t('actions.submit') %>
    </div>
  <% end %>
</div>
