<% flash.each do |type, message| %>
  <% if %w[error].include?(type) %>
    <div class="bg-red-100 border border-red-400 text-red-700 pl-2 pr-8 py-3 rounded relative mb-5" role="<%= type %>" data-controller="html-remove">
  <% elsif type == 'alert' %>
    <div class="bg-yellow-100 border border-yellow-400 text-yellow-700 pl-2 pr-8 py-3 rounded relative mb-5" role="<%= type %>" data-controller="html-remove">
  <% elsif type == 'success' %>
    <div class="bg-green-100 border border-green-400 text-green-700 pl-2 pr-8 py-3 rounded relative mb-5" role="<%= type %>" data-controller="html-remove">
  <% elsif type == 'notice' %>
    <div class="bg-green-100 border border-green-400 text-green-700 pl-2 pr-8 py-3 rounded relative mb-5" role="<%= type %>" data-controller="html-remove">
  <% end %>
    <span class="block mr-8">
      <% if message.kind_of?(Array) %>
        <ul>
          <% message.each do |msg|%>
            <li class="pl-2"><%= msg %></li>
          <% end %>
        </ul>
      <% else %>
        <%= message %>
      <% end %>
    </span>
    <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
      <%= svg_tag 'icons/cross', size: '2xl', svg_class: 'fill-current cursor-pointer', options: { 'data-action': "click->html-remove#call" } %>
    </span>
  </div>
<% end %>
