<div id="user-search">
  <%= form_with url: users_url, method: :get, builder: TailwindBuilder, html: { class: "pb-5 flex flex-wrap gap-2", data: { turbo: false, controller: "autosave" } } do |form| %>
    <div class="relative rounded-md shadow-sm">
      <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
        <%= svg_tag 'icons/magnify', size: 'xl', svg_class: 'text-gray-400', options: { g_color: 'none', fill: 'none', stroke: 'currentColor'} %>
      </div>
      <%= search_field_tag :search,
                          params[:search],
                          class: "pl-10 block w-full rounded-md border-gray-300 shadow-sm",
                          placeholder: t('actions.search'),
                          data: { action: 'change->autosave#save' } %>
    </div>
    <%= select_tag :admin,
        options_for_select([
          [t('admin', scope: 'activerecord.attributes.user'), nil],
          ['True', true],
          ['False', false]
        ], params[:admin]),
        class: 'rounded-md border-gray-300 shadow-sm',
        data: { action: 'autosave#save' } %>
    <%= select_tag :confirmed,
        options_for_select([
          [t('confirmed', scope: 'activerecord.attributes.user'), nil],
          ['True', true],
          ['False', false]
        ], params[:confirmed]),
        class: 'rounded-md border-gray-300 shadow-sm',
        data: { action: 'autosave#save' } %>
  <% end %>
</div>
